@model TicketViewModel
@{
                /**/

                ViewBag.Title = "Nuevo";
}

<h2>
    <a style="float:right;color:green" href="@Url.Action("Index","Ticket")">
        <i class="fas fa-arrow-circle-left"></i>
    </a>
    Nuevo Ticket
</h2>
<hr />

@using (Html.BeginForm("Nuevo", "Ticket", FormMethod.Post))
{
    <div class="form-group">
        <label>Fecha Generacion</label>
        @Html.TextBoxFor(m => m.Ticket.FechaGeneracion, new { @class = "form-control", @required = "required", @type = "date" })
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select name="Ticket.IdEstado" class="form-control" required>
            <option value="">Seleccione</option>
            @foreach (var estado in Model.Estados)
            {
                <option value="@estado.id">@estado.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Usuario</label>
        <select name="Ticket.IdUsuario" class="form-control" required>
            <option value="">Seleccione</option>
            @foreach (var usuario in Model.Users)
            {
                <option value="@usuario.UserId">@usuario.FullName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Descripción</label>
        @Html.TextAreaFor(m => m.Ticket.Descripcion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tipo Requerimiento</label>
        <select name="Ticket.IdRequerimiento" class="form-control" required>
            <option value="">Seleccione</option>
            @foreach (var requerimiento in Model.Requerimientos)
            {
                <option value="@requerimiento.RequerimientoId">@requerimiento.RequerimientoTipo</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Prioridad</label>
        <select name="Ticket.IdPrioridad" class="form-control" required>
            <option value="">Seleccione</option>
            @foreach (var prioridad in Model.Prioridades)
            {
                <option value="@prioridad.PrioridadId">@prioridad.PrioridadTipo</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Guardar" class="btn btn-success" />
    </div>

}
