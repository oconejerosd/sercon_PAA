@model Proyecto_PAA.ViewModels.PrioridadViewModel
@{
    ViewBag.Title = "Registro de Prioridades";
}

<div class="card">
    <div class="card-header">
        <h3>Registro de Prioridades</h3>
    </div>
    <div class="card-body">
        <form action="/prioridad/Update" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="PrioridadId" value="@Model.PrioridadId" class="form-control" />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label>Prioridad:</label>
                <input type="text" name="PrioridadTipo" value="@Model.PrioridadTipo" class="form-control" />
                @Html.ValidationMessageFor(m => m.PrioridadTipo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">Actualizar <i class="fa fa-save"></i></button>
            </div>

        </form>
    </div>
</div>