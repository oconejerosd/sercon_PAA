@model IEnumerable<Ticket>
@{
    ViewBag.Title = "Index";
}
<div class="card">
    <div class="card-header">
        <h3 align="center">Ingreso de Ticket</h3>
    </div>
    <div class="card-body">
        <form action="#" method="post">
            <div class="form-group">
                <label for="exampleFormControlSelect1">Tipo de Requerimiento</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Seleccione Opción</option>
                    <option>Internet</option>
                    <option>Plataformas</option>
                    <option>Redes</option>
                    <option>Equipamiento</option>
                </select>
            </div>
            <div class="form-group">
                <label>Asunto Ticket:</label>
                <input type="text" name="asunto_ticket" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label>Detalle Ticket:</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-info btn-block"><i class="fas fa-sign-in-alt"></i>Ingresar</button>
                <button type="reset" class="btn btn-danger btn-block"><i class="fas fa-sign-in-alt"></i>Borrar</button>
            </div>
        </form>
    </div>
</div>
<br />
<br />
<div class="card-header">
    <h3 class="card-title" align="center">
        Registro de Ticket
    </h3>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-darker">
            <tr>
                <th>#</th>
                <th>Fecha</th>
                <th>Tipo</th>
                <th>Asunto</th>
                <th>Técnico Asignado</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>#</td>
                <td>2020-06-25</td>
                <td>Internet</td>
                <td>Sin Internet</td>
                <td>Christian Vittori</td>
                <td>Abierto</td>
                <td>
                    <a href="#" class="btn btn-info btn-sm" title="Modificar">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="#" class="btn btn-danger btn-sm" title="Eliminar">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>

</div>




<div class="bottom-left" align="right">
    <svg class="bi bi-arrow-left-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.646 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L6.207 7.5H11a.5.5 0 0 1 0 1H6.207l2.147 2.146z" />
    </svg>
    <a href="/Admin/Index">Volver</a>
</div>
