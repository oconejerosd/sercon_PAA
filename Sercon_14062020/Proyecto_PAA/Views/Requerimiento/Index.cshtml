@model Proyecto_PAA.ViewModels.RequerimientosViewModel
@{
    ViewBag.Title = "Registro de Requerimientos";
    //List<SelectListItem> establecimientos = (List<SelectListItem>)ViewBag.establecimientos;
}
<br />
<div class="card">
    <div class="card-header">
        <h3>Registro de Tipo de Requerimientos</h3>
    </div>
    <div class="card-body">
        <form action="/requerimiento/Crear" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label>Requerimiento:</label>
                <input type="text" name="RequerimientoTipo" value="@Model.RequerimientoTipo" class="form-control" />
                @Html.ValidationMessageFor(m => m.RequerimientoTipo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Guardar <i class="fa fa-save"></i></button>
            </div>
        </form>
    </div>
</div>
<br />
<h3 class="card-title" align="center">Listado de Requerimientos</h3>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-darker">
            <tr>
                <th>#</th>
                <th>Tipo de Requerimiento</th>
                <th>Acciones</th>

            </tr>
        </thead>
        @foreach (var item in Model.Requerimientos)
        {
            <tr>
                <td>@item.RequerimientoId</td>
                <td>@item.RequerimientoTipo</td>
                <td>
                    <a href="/Requerimiento/Delete/@item.RequerimientoId" class="btn btn-danger btn-sm" title="Eliminar">
                        <i class="fa fa-trash"></i>
                    </a>
                    <a href="/Requerimiento/Update/@item.RequerimientoId" class="btn btn-info btn-sm" title="Modificar">
                        <i class="fa fa-pencil"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>

